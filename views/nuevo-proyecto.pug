extends layout
block contenido
  h1.text-center.mt-3 #{nombrePagina}
  
  .row.bg-light.p-4
    .col-9.offset-1 
      if errors
        each error in errors.errors 
          .alert.alert-danger(role="alert")
            | #{error.msg}
      form.agregar-proyecto(action="/nuevo-proyecto" method="POST")
        .campo 
          label(for="nombre") Nombre del proyecto
          input.form-control(name="nombre" autocomplete="off" value=`${ proyecto ? proyecto.nombre : '' }`) 
        .campo.enviar 
          //- input(type="submit" value="Agregar" class="btn btn-success mt-2")
          button.btn.btn-success.mt-2(type="submit")
            if proyecto
              i.bi.bi-cloud-plus &nbsp;
              | Actualizar
            else 
              i.bi.bi-folder-plus &nbsp;
              | Agregar
    .col-2
